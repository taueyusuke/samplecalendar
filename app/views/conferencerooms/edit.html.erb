<div class="container-hluid">
  <div class="row no-gutters">
    <div class="col-3 bg-primary ">
      <h1>test</h1>
      <h1>test</h1>
      <h1>test</h1>
    </div>
    <div class="col-9">
      <hr>
      <br>
    <h1>会議室の新規登録</h1>
    <br>
 
    <div class="border col-5">
      <br>
      <div class="row">
        <%= form_with model: @conferenceroom, url: conferenceroom_path(@conferenceroom), local: true do |f| %>
          <%= f.label :conferenceroomname %>
          <%= f.text_field :conferenceroomname, class: "form-control" %>
          
          <%= f.label :people %>
          <%= f.text_field :people, class: "form-control" %>
          
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control" %>
          
          <%= f.label :starttime %>
          <%= f.text_field :starttime, class: "form-control" %>
          
          <%= f.label :endtime %>
          <%= f.text_field :endtime, class: "form-control" %>
          
          <%= f.label :remarks %>
          <%= f.text_field :remarks, class: "form-control" %>
          
          <div>
            <%= link_to "削除", conferenceroom_path(@conferenceroom), method: :delete, class: "btn btn-danger" %>
            <%= f.submit "編集", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>